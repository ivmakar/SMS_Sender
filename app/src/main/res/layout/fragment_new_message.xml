<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
                name="viewModel"
                type="ru.example.ivan.smssender.ui.screens.new_message.NewMessageViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="ru.example.ivan.smssender.ui.screens.new_message.NewMessageFragment">

        <TextView
                android:id="@+id/new_message_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_message_group_name_text_view"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

        <TextView
                android:id="@+id/new_message_group_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.group.groupName}"
                app:layout_constraintLeft_toRightOf="@+id/new_message_group_name"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/new_message_group_name"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/new_message_group_name"
                android:id="@+id/linear_layout_random">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:padding="2dp">

                <CheckBox
                        android:id="@+id/is_random_sending_check_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="@{viewModel.isRandomInterval}"
                        android:onCheckedChanged="@{() -> viewModel.onCheckedChangedRandomInterval()}"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2dp">

                <TextView
                        android:id="@+id/random_interval_sending_text_view1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/random_interval_sending_text_view1"
                        android:textSize="@dimen/text_large"/>

                <TextView
                        android:id="@+id/random_interval_sending_text_view2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/random_interval_sending_text_view2"
                        android:textSize="@dimen/text_small"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp"
                android:id="@+id/linear_layout_schedule"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/linear_layout_random">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:padding="2dp">

                <CheckBox
                        android:id="@+id/is_schedule_sending_check_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="@{viewModel.isScheduleSending}"
                        android:onCheckedChanged="@{() -> viewModel.onCheckedChangedScheduleSending()}"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2dp">

                <TextView
                        android:id="@+id/schedule_sending_text_view1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/schedule_sending_text_view1"
                        android:textSize="@dimen/text_large"/>

                <TextView
                        android:id="@+id/schedule_sending_text_view2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/schedule_sending_text_view2"
                        android:textSize="@dimen/text_small"/>

            </LinearLayout>

        </LinearLayout>

