<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
                name="viewModel"
                type="ru.example.ivan.smssender.ui.screens.new_message.NewMessageViewModel"/>
    </data>



        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:srcCompat="@android:drawable/ic_menu_send"
                    android:id="@+id/fab_send_message"
                    android:layout_margin="@dimen/fab_margin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.51">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/new_message_group_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/new_message_group_name_text_view"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"/>

                    <TextView
                            android:id="@+id/new_message_group_name_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.group.groupName}"
                            app:layout_constraintLeft_toRightOf="@+id/new_message_group_name"
                            android:layout_marginStart="8dp"
                            app:layout_constraintStart_toEndOf="@+id/new_message_group_name"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="4dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/new_message_group_name"
                            android:id="@+id/linear_layout_random">

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="left"
                                android:padding="2dp">

                            <CheckBox
                                    android:id="@+id/is_random_sending_check_box"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="@={viewModel.randomInterval}"/>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="2dp">

                            <TextView
                                    android:id="@+id/random_interval_sending_text_view1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/random_interval_sending_text_view1"
                                    android:textSize="@dimen/text_large"/>

                            <TextView
                                    android:id="@+id/random_interval_sending_text_view2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/random_interval_sending_text_view2"
                                    android:textSize="@dimen/text_small"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="4dp"
                            android:id="@+id/linear_layout_schedule"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/linear_layout_random">

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="left"
                                android:padding="2dp">

                            <CheckBox
                                    android:id="@+id/is_schedule_sending_check_box"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="@={viewModel.scheduleSending}"/>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="2dp">

                            <TextView
                                    android:id="@+id/schedule_sending_text_view1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/schedule_sending_text_view1"
                                    android:textSize="@dimen/text_large"/>

                            <TextView
                                    android:id="@+id/schedule_sending_text_view2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/schedule_sending_text_view2"
                                    android:textSize="@dimen/text_small"/>

                        </LinearLayout>

                    </LinearLayout>


                    <TextView
                            android:text="Интервал отправки"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/linear_layout_schedule"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="@{viewModel.randomInterval ? @string/start_interval_caption : @string/interval_caption}"
                            android:id="@+id/start_interval_text_input_layout"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/textView"
                            android:layout_marginStart="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/end_interval_text_input_layout"
                            android:layout_marginEnd="8dp">

                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:text="@{Integer.toString(viewModel.intervalStart)}"
                                android:hint="@{viewModel.randomInterval ? @string/start_interval_caption : @string/interval_caption}"
                                android:id="@+id/start_interval_edit_text"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:visibility="@{viewModel.randomInterval ? View.VISIBLE : View.GONE}"
                            android:id="@+id/end_interval_text_input_layout"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toEndOf="@+id/start_interval_text_input_layout"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toTopOf="@+id/start_interval_text_input_layout">

                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:text="@{Integer.toString(viewModel.intarvalEnd)}"
                                android:hint="@string/end_interval_caption"
                                android:id="@+id/end_interval_edit_text"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"/>

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/schedule_time_text_input_layout"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/start_interval_text_input_layout"
                            android:layout_marginStart="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/schedule_time_edit_text_hint"
                                android:inputType="datetime"
                                android:enabled="@{viewModel.scheduleSending}"
                                android:focusableInTouchMode="false"
                                android:text="@{viewModel.scheduleDateText}"
                                android:id="@+id/schedule_time_edit_text"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                            android:text="@{@string/messages_text_view + ' ' + Integer.toString(viewModel.curMessageCount)}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/message_count_text_view"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/schedule_time_text_input_layout"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"/>

                    <TextView
                            android:text="@{@string/symbols_text_view + ' ' + Integer.toString(viewModel.curSimb) + '/' + Integer.toString(viewModel.maxSimb)}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/symbol_count_text_view"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/schedule_time_text_input_layout"/>

                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/message_input_text_input_layout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/symbol_count_text_view">

                        <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/message_input_edit_text"
                                android:hint="@string/new_message_edit_text_hint"
                                android:lines="5"
                                android:gravity="top"
                                android:text="@{viewModel.messageText}"
                                android:afterTextChanged="@{(s) -> viewModel.onMessageTextChanged(s)}"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>


                    </com.google.android.material.textfield.TextInputLayout>


                    <Button
                            android:text="@string/select_template_button_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/select_template_button"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/message_input_text_input_layout"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>


</layout>