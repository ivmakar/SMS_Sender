<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
                name="viewModel"
                type="ru.example.ivan.smssender.ui.screens.new_message.NewMessageViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="ru.example.ivan.smssender.ui.screens.new_message.NewMessageActivity">

        <TextView
                android:id="@+id/new_message_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_message_group_name_text_view"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

        <TextView
                android:id="@+id/new_message_group_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.group.groupName}"
                app:layout_constraintLeft_toRightOf="@+id/new_message_group_name"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/new_message_group_name"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>

        <CheckBox
                android:id="@+id/is_random_sending_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:checked="@{viewModel.isRandomInterval}"
                android:onCheckedChanged="@{() -> viewModel.onCheckedChangedRandomInterval()}"
                app:layout_constraintTop_toBottomOf="@+id/new_message_group_name"/>

        <CheckedTextView
                android:id="@+id/random_interval_sending_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/random_interval_sending_text_view"
                app:layout_constraintStart_toEndOf="@+id/is_random_sending_check_box"
                app:layout_constraintTop_toTopOf="@+id/is_random_sending_check_box"
                app:layout_constraintBottom_toBottomOf="@+id/is_random_sending_check_box"
                android:layout_marginEnd="8dp"/>

        <SeekBar
                android:id="@+id/random_sending_interval_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@+id/is_random_sending_check_box"/>

        <CheckBox
                android:id="@+id/is_schedule_sending_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:checked="@{viewModel.isScheduleSending}"
                android:onCheckedChanged="@{() -> viewModel.onCheckedChangedScheduleSending()}"
                app:layout_constraintTop_toBottomOf="@+id/random_sending_interval_seek_bar"/>

        <CheckedTextView
                android:id="@+id/schedule_sending_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@{viewModel.isScheduleSending ? @string/schedule_sending_text_view : @string/no_schedule_sending_text_view}"
                app:layout_constraintStart_toEndOf="@+id/is_schedule_sending_check_box"
                app:layout_constraintTop_toTopOf="@+id/is_schedule_sending_check_box"
                app:layout_constraintBottom_toBottomOf="@+id/is_schedule_sending_check_box"
                android:layout_marginEnd="8dp"/>







        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">

            <ImageButton
                    android:id="@+id/select_template_image_button"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:srcCompat="@drawable/ic_launcher_foreground"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/message_input_edit_text"
                    app:layout_constraintStart_toEndOf="@+id/select_template_image_button"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/send_message_image_button"/>

            <ImageButton
                    android:id="@+id/send_message_image_button"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/message_input_edit_text"
                    android:layout_marginStart="8dp"
                    app:srcCompat="@drawable/ic_launcher_foreground"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"/>

        </android.support.constraint.ConstraintLayout>



    </android.support.constraint.ConstraintLayout>
</layout>